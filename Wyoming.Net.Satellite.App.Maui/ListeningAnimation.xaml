<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wyoming.Net.Satellite.App.Maui.ListeningAnimation">
    <VerticalStackLayout
    Spacing="24"
    HorizontalOptions="Center"
    VerticalOptions="Center">

    <!-- MIC + PULSES -->
    <AbsoluteLayout
        WidthRequest="192"
        HeightRequest="192">

        <!-- OUTER PULSE -->
        <Ellipse x:Name="OuterPulse"
                 WidthRequest="192"
                 HeightRequest="192"
                 Fill="#60A5FA"
                 Opacity="0"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,192,192"
                 AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <!-- MIDDLE PULSE -->
        <Ellipse x:Name="MiddlePulse"
                 WidthRequest="160"
                 HeightRequest="160"
                 Fill="#3B82F6"
                 Opacity="0"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,160,160"
                 AbsoluteLayout.LayoutFlags="PositionProportional"/>

        <!-- CENTER MIC -->
        <Border x:Name="MicCore"
               WidthRequest="96"
               HeightRequest="96"
               StrokeThickness="0" 
               StrokeShape="Ellipse 10"
               BackgroundColor="#2563EB"
               AbsoluteLayout.LayoutBounds="0.5,0.5,96,96"
               AbsoluteLayout.LayoutFlags="PositionProportional">

            <Image x:Name="MicIcon"
                   Source="mic.png"
                   WidthRequest="48"
                   HeightRequest="48"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Border>
    </AbsoluteLayout>

    <!-- STATUS TEXT -->
    <VerticalStackLayout Spacing="4">
        <Label x:Name="StatusTitle"
               Text="Satellite stopped"
               FontSize="18"
               HorizontalOptions="Center"/>

        <Label x:Name="StatusSubtitle"
               Text="Press start to begin"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center"/>
        <ActivityIndicator x:Name="ServerIndicator" IsVisible="False" IsRunning="False" />
    </VerticalStackLayout>

</VerticalStackLayout>

</ContentView>