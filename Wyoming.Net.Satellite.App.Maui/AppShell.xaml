<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wyoming.Net.Satellite.App.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wyoming.Net.Satellite.App.Maui"
    Shell.FlyoutBehavior="Flyout"
    Title="Wyoming.Net">

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent
                    Title="Home"
                    ContentTemplate="{DataTemplate local:MainPage}"
                    Route="MainPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Satellite Settings">
        <Tab>
            <ShellContent
            Title="Satellite Settings"
            ContentTemplate="{DataTemplate local:SatelliteSettingsPage}"
            Route="SatelliteSettings" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Wake Settings">
        <Tab>
            <ShellContent
                Title="Wake Settings"
                ContentTemplate="{DataTemplate local:WakeSettingsPage}"
                Route="WakeSettings" />
        </Tab>
    </FlyoutItem>


</Shell>
